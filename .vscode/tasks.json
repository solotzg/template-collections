{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build-debug.sh",
            "problemMatcher": [],
            "dependsOn": []
        },
        {
            "label": "build & run",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run-debug.sh",
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "release_build",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build-release.sh",
            "problemMatcher": []
        },
        {
            "label": "release_build & run",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run-release.sh",
            "dependsOrder": "sequence",
            "dependsOn": [
                "release_build"
            ],
            "problemMatcher": []
        },
        {
            "label": "run_bash",
            "type": "shell",
            "command": "${file}",
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "build_java_utils",
            "type": "shell",
            "command": "cd ${workspaceFolder}/JavaUtils && mvn package -DskipTests",
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "run_java_test",
            "type": "shell",
            "command": "cd ${workspaceFolder}/JavaUtils && mvn test",
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "build_run_code_coverage",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run-code-coverage.sh",
            "problemMatcher": []
        },
        {
            "label": "tidy",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=tidy",
                "--clang-tidy-path=clang-tidy"
            ],
            "problemMatcher": []
        },
        {
            "label": "recompile",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=build",
            ],
            "problemMatcher": []
        },
        {
            "label": "release_recompile",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-release",
            "args": [
                "--file=${file}",
                "--type=build",
            ],
            "problemMatcher": []
        },
        {
            "label": "release_objdump",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-release",
            "args": [
                "--file=${file}",
                "--type=objdump",
            ],
            "problemMatcher": []
        },
        {
            "label": "debug_objdump",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=objdump",
            ],
            "problemMatcher": []
        },
        {
            "label": "recompile & objdump",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "recompile",
                "debug_objdump"
            ]
        },
        {
            "label": "release_recompile & objdump",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "release_recompile",
                "release_objdump"
            ]
        },
        {
            "label": "force_release_recompile",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=build",
                "--release"
            ],
            "problemMatcher": []
        },
        {
            "label": "force_release_recompile & objdump",
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "dependsOn": [
                "force_release_recompile",
                "debug_objdump"
            ]
        },
        {
            "label": "check_syntax",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=build",
                "--syntax",
            ],
            "problemMatcher": []
        },
        {
            "label": "preprocess",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=build",
                "--preprocess",
            ],
            "problemMatcher": []
        },
        {
            "label": "release_emmit_llvm",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-release",
            "args": [
                "--file=${file}",
                "--type=build",
                "--emmit-llvm",
            ],
            "problemMatcher": []
        },
        {
            "label": "debug_emmit_llvm",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/recompile-debug",
            "args": [
                "--file=${file}",
                "--type=build",
                "--emmit-llvm",
            ],
            "problemMatcher": []
        },
        {
            "label": "iwyu",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/iwyu",
            "args": [
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "fmt",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/fmt",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/clean",
            "problemMatcher": []
        },
    ]
}