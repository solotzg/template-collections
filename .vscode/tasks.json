{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "reload-cmake",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/cmake-debug.sh",
            "args": [],
            "problemMatcher": []
        },
        {
            "label": "clean-cmake-build",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/cmake-build-debug",
            "args": [],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/cmake-build-debug && cmake --build . --parallel",
            "problemMatcher": []
        },
        {
            "label": "release-build",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/build-release.sh",
            "problemMatcher": []
        },
        {
            "label": "release-build-run",
            "type": "shell",
            "command": "cd ${workspaceFolder}/cmake-build-release && ./CPPTest",
            "dependsOrder": "sequence",
            "dependsOn": [
                "release-build",
            ],
            "problemMatcher": []
        },
        {
            "label": "run-bash",
            "type": "shell",
            "command": "${file}",
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "build-run-code-coverage-windows",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run-code-coverage-windows.sh",
            "problemMatcher": []
        },
        {
            "label": "build-run-code-coverage",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run-code-coverage.sh",
            "problemMatcher": []
        },
        {
            "label": "Tidy",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/recompile.py",
                "--file",
                "${file}",
                "--type",
                "tidy",
                "--work-dir",
                "${workspaceFolder}/cmake-build-debug",
                "--clang-tidy-path",
                "clang-tidy"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Recompile",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/recompile.py",
                "--file",
                "${file}",
                "--type",
                "build",
                "--work-dir",
                "${workspaceFolder}/cmake-build-debug",
            ],
            "problemMatcher": []
        },
        {
            "label": "Objdump",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/recompile.py",
                "--file",
                "${file}",
                "--type",
                "objdump",
                "--work-dir",
                "${workspaceFolder}/cmake-build-debug",
            ],
            "problemMatcher": []
        },
        {
            "label": "ReleaseBuild-Recompile",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/recompile.py",
                "--file",
                "${file}",
                "--type",
                "build",
                "--work-dir",
                "${workspaceFolder}/cmake-build-debug",
                "--release-build"
            ],
            "problemMatcher": []
        },
        {
            "label": "ReleaseBuild-Recompile-Objdump",
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "dependsOn": [
                "ReleaseBuild-Recompile",
                "Objdump"
            ]
        },
        {
            "label": "CheckSyntax",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.vscode/recompile.py",
                "--file",
                "${file}",
                "--type",
                "syntax",
                "--work-dir",
                "${workspaceFolder}/cmake-build-debug",
            ],
            "problemMatcher": []
        },
    ]
}